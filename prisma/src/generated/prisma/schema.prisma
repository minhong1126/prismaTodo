generator client {
  provider = "prisma-client-js"
  output   = "./src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Color {
  BLACK
  BLUE
  SKYBLUE
  YELLOW
  PURPLE
  GREEN
  PINK
  GRAY
  WHITE
}

model User {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  totalTodo   Int        @default(0)
  doneTodo    Int        @default(0)
  todos       Todo[]
  cateogories Category[]
}

model Todo {
  id       Int      @id @default(autoincrement())
  title    String
  memo     String?
  isDone   Boolean
  category String?
  date     DateTime

  userId Int
  user   User @relation(fields: [userId], references: [id])
}

model Category {
  id        Int    @id @default(autoincrement())
  name      String @unique
  totalTodo Int    @default(0)
  color     Color

  userId Int
  user   User @relation(fields: [userId], references: [id])
}
